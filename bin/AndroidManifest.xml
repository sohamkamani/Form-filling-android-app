<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sohamkamani.street_food"
    android:versionCode="7"
    android:versionName="3.5" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.sohamkamani.form_filling.MainActivity"
            android:label="MainPage"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.sohamkamani.form_filling.CompoundEntry1"
            android:label="@string/title_activity_menu_entry"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.sohamkamani.form_filling.CompoundEntry2"
            android:label="@string/title_activity_ingredient_entry" >
        </activity>
        <activity
            android:name="com.sohamkamani.form_filling.Uploader"
            android:label="ImageUploader" >
        </activity>
    </application>

</manifest>